{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch Tests with Output",
      "type": "shell",
      "command": "cargo watch -x 'test -- --show-output'",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": "$rustc"
    },
    {
      "label": "Review Snapshots",
      "type": "shell",
      "command": "cargo insta review",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}